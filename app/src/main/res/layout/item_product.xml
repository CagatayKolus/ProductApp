<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textview_item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black80"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_item_product_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_item_product_description"
        tools:text="91" />

    <TextView
        android:id="@+id/textview_item_product_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black80"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_item_product_price"
        app:layout_constraintEnd_toStartOf="@+id/textview_item_product_price"
        app:layout_constraintTop_toTopOf="@+id/textview_item_product_price"
        tools:text="$" />

    <TextView
        android:id="@+id/textview_item_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black80"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_item_product_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_item_product_product"
        tools:text="HI333" />

    <TextView
        android:id="@+id/textview_item_product_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black80"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_item_product_description"
        app:layout_constraintEnd_toStartOf="@+id/textview_item_product_id"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:text="product" />

    <TextView
        android:id="@+id/textview_item_product_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="1"
        android:textColor="@color/black80"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/textview_item_product_currency"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textview_item_product_product"
        tools:text="description" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_label" />
</androidx.constraintlayout.widget.ConstraintLayout>